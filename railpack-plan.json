{
  "build": [
    "apt-get update && apt-get install -y python3 python3-venv curl",
    "curl https://bootstrap.pypa.io/get-pip.py -o get-pip.py",
    "python3 get-pip.py",
    "python3 -m pip install --upgrade pip",
    "python3 -m pip install -r backend/faster-whisper/requirements.txt"
  ],
  "start": "uvicorn backend.faster-whisper.main:app --host 0.0.0.0 --port $PORT"
}
